%table.addresses(align="left" border="0" cellpadding="0" cellspacing="0" style="width: 100%;max-width: 365px;border-collapse: separate;border-spacing: 0;padding-bottom: 20px;")
  %tr
    %td.bodytextsmall(valign="top" style="padding-right: 25px;border-collapse: collapse;font-size: 13px;line-height: 18px;color: #000000;font-family: helvetica, times new roman, sans-serif;")
      %p(style="color: #000;font-size: 13px;font-family: helvetica, times new roman, sans-serif;margin: 0px;padding: 0px;mso-table-lspace: 0;mso-table-rspace: 0;")
        %strong
          Shipping Address
        %br
        = shipping_address.address1
        %br
        - unless shipping_address.address2.blank?
          = shipping_address.address2
          %br
        #{shipping_address.city}, #{shipping_address.state} #{shipping_address.zip}
        %br
        = shipping_address.phoneNumber

    %td.bodytextsmall(valign="top" style="border-collapse: collapse;font-size: 13px;line-height: 18px;color: #000000;font-family: helvetica, times new roman, sans-serif;")
      %p(style="color: #000;font-size: 13px;font-family: helvetica, times new roman, sans-serif;margin: 0px;padding: 0px;mso-table-lspace: 0;mso-table-rspace: 0;")
        %strong
          Billing Address
        %br
        = billing_address.address1
        %br
        - unless billing_address.address2.blank?
          = billing_address.address2
          %br
        #{billing_address.city}, #{billing_address.state} #{billing_address.zip}
        %br
        = billing_address.phoneNumber
